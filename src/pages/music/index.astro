---
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Tag from "@/components/Tag.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import { SITE } from "@/config";
import PlaylistPlayer from "@/components/PlaylistPlayer.jsx";
import MusicPlayer from "astro-netease-player/MusicPlayer.astro";

interface Artist {
  name: string;
}

interface Track {
  name: string;
  ar: Artist[];
  id: number;
}

interface Playlist {
  tracks: Track[];
  coverImgUrl: string;
}

interface ApiResponse {
  data: {
    playlist: Playlist;
  };
}
---

<Layout title={`轻松愉快的歌单 | ${SITE.title}`} />
<Header />
<Main pageTitle="轻松愉快的歌单" pageDesc="主播和小伙伴喜欢听的歌" />

<section id="music-section" class="mb-10 flex flex-col items-center">
  <div class="mx-auto w-full max-w-4xl">
    <iframe
      src="https://i.y.qq.com/n2/m/share/details/taoge.html?id=9482410026"
      width="100%"
      height="450"
      style="border:0;overflow:hidden;background:transparent;"
      allow="autoplay; encrypted-media"
      loading="lazy"></iframe>
  </div>

  <div class="flex space-x-4">
    <!-- 网易云音乐 -->
    <a
      href="https://i.y.qq.com/n2/m/share/details/taoge.html?id=9482410026"
      target="_blank"
      rel="noopener"
      class="flex items-center rounded bg-red-500 px-4 py-2 text-white transition hover:bg-red-600"
    >
      <!-- 如果你有网易云图标，可用 <img> 引入 -->
      <!-- <img src="/icons/netease.svg" alt="网易云" class="w-5 h-5 mr-2"/> -->
      在QQ音乐中查看
    </a>

    <!-- Apple Music -->
    <a
      href="https://music.apple.com/cn/playlist/%E8%BD%BB%E6%9D%BE%E6%84%89%E5%BF%AB/pl.u-d2b05gWCblzYJr?l=en-GB"
      target="_blank"
      rel="noopener"
      class="flex items-center rounded bg-black px-4 py-2 text-white transition hover:bg-gray-800"
    >
      <!-- 如果你有 Apple Music 图标，可用 <img> 引入 -->
      <!-- <img src="/icons/apple-music.svg" alt="Apple Music" class="w-5 h-5 mr-2"/> -->
      在 Apple Music 中查看
    </a>
  </div>
</section>

<Footer />
