---
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Tag from "@/components/Tag.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import { SITE } from "@/config";

const posts = await getCollection("blog");

let tags = getUniqueTags(posts);
---

<Layout title={`Foods | ${SITE.title}`}>
  <Header />
  <Main pageTitle="美食安利！" pageDesc="ohaaayooo和朋友们爱吃的东西">
    <!-- 一：Google My Maps 嵌入 -->
    <section>
      <h2 class="mb-4 text-2xl font-semibold">Oversea</h2>
      <a
        class="inline-block rounded bg-yellow-500 px-4 py-2 text-white transition hover:bg-red-600"
        href="https://maps.app.goo.gl/ZaLTKN6CqdmwKLpCA?g_st=ac"
        target="_blank"
        rel="noopener"
      >
        Google Map
      </a>
    </section>
    <!-- 二：高德地图链接 -->
    <section>
      <h2 class="mb-4 text-2xl font-semibold">China Mainland</h2>
      <a
        class="inline-block rounded bg-yellow-500 px-4 py-2 text-white transition hover:bg-red-600"
        href="https://map.wap.qq.com/online/h5-share/favoriteShare.html?favPois=_6a23ee9c0cf26f7a8015fd56cbff8fec&labelName=Nice+Try%E4%B8%BA%E4%BD%A0%E5%88%86%E4%BA%AB%E4%B8%80%E7%BB%84%E5%9C%B0%E7%82%B9&labelGroupName=%E8%BD%BB%E6%9D%BE%E6%84%89%E5%BF%AB"
        target="_blank"
        rel="noopener"
      >
        Tencent Map
      </a>
    </section>
  </Main>
  <Footer />
</Layout>
